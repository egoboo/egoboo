# Do not run this file. Run the Makefile in the parent directory, instead

IDLIB_TARGET := libid.a

#---------------------
# the source files
SOURCES := $(wildcard ./src/IdLib/*.cpp)

#-------------------
# object output
OBJECTS := $(SOURCES:.cpp=.o)

#---------------------
# the SDL configuration

SDL_CONF  := sdl-config
SDLCONF_C := $(shell ${SDL_CONF} --cflags)

#---------------------
# the compiler options

CC	:= g++

INCLUDES := -I./src -I../game/src -I../egolib/src

INCLUDES += -I../../enet-1.3.12/include
INCLUDES += -I../../physfs-2.0.3/

CPP_FLAGS  := $(INCLUDES) $(SDLCONF_C) -Weffc++ -std=c++11 -O0 -D_CONSOLE -D__USE_MINGW_ANSI_STDIO=1 -Wall -Werror -Wfatal-errors

#Disable specific warnings
CPP_FLAGS += -Wno-sign-compare -Wno-reorder

#Debug options
CPP_FLAGS += -ggdb -fdiagnostics-color=always -pg
#CPP_FLAGS += -fsanitize=undefined -fsanitize=leak -fsanitize=address
#CPP_FLAGS += -fsanitize=integer-divide-by-zero -fsanitize=null -fsanitize=vla-bound -fsanitize=return -fsanitize=signed-integer-overflow -fsanitize=enum

#Release
#-D_NDEBUG 

#------------------------------------
# definitions of the target projects

.PHONY: all clean

all: $(IDLIB_TARGET)

# Generic rule
%.o: %.c
	$(CC) $(CPP_FLAGS) -c $< -o $@
%.o: %.cpp
	$(CC) $(CPP_FLAGS) -c $< -o $@

$(IDLIB_TARGET): $(OBJECTS)
	ar rcsv $(IDLIB_TARGET) $(OBJECTS)

clean:
	rm -f $(IDLIB_TARGET) ./src/IdLib/*.o
